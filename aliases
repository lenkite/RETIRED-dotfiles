# Aliases go into this file

# Default to human readable figures
alias df='df -h'
alias du='du -h'
# -v	Causes dirs to print the directory stack with one entry per 
#	line, prefixing each entry with its index in the stack.
alias dirs='dirs -v'
alias dv='dirs -v'
alias pud='pushd'
alias pod='popd'
alias tags='ctags -R --extra=+fq --fields=+ailmnSz .'

alias ls='ls -F --color=auto'
# list dirs only
alias lsdir='ls -d */'
alias grep='grep --color'                     # show differences in colour

alias dir='ls --color=auto --format=vertical'
alias vdir='ls --color=auto --format=long'
alias la='ls -A'                              # all but . and ..
alias l='ls -CF'                              #
alias ll='ls -al'
alias llt='ls -F -alt'
alias pw='cygpath -aw'
alias mvne="mvn eclipse:eclipse -DdownloadSources=true -DdownloadJavadocs=true"
alias mvnc="mvn clean"
alias nsumvne="mvn -nsu eclipse:eclipse -DdownloadSources=true -DdownloadJavadocs=true"
alias wgetvm='wget --no-check-certificate --no-proxy'
alias mmv='noglob zmv -W'
alias winkill='taskkill /F /IM'
alias msi='mvn -DskipTests install'
alias nsumsi='mvn -nsu -DskipTests install'
alias s='screen'
alias animal="curl -s 'http://animals.ivolo.me/?index=8'"
alias moving_animal='curl -s https://raw.github.com/ivolo/animals/master/examples/loading.sh | sh'
alias mvn='mvn'
alias open='cygstart'
alias cpw='pw . | clip'
